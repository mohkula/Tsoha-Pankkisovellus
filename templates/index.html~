<form action="/login" method="POST" onsubmit="return check(this)">
<p>Kirjaudu sisään<br>
<p>Tunnus:<br>
<input type="text" name="username"></p>
<p>Salasana:<br>
<input type="password" name="password"></p>
<input type="submit" value="Kirjaudu">
</form>

<form action="/createNewUser" method="POST">
<input type="submit" value="Luo käyttäjä">
</form>



<script>
function check(form) {
	
	
	
    if (form.username.value.length == 0) {
        alert("Tunnus ei saa olla tyhjä!");
        return false;
    }
    
    
    if (form.newPassword.value.length == 0) {
        alert("Salasana ei saa olla tyhjä");
        return false;
    }
    
    return true;
}
</script>

